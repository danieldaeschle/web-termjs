{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true
  },
  "lib": [
    "es2015",
    "dom"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
  "types": [
    "node"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ]
}
